                },
                "rules": [
                    {
                        "description": "Hyper + number app launcher (1:iTerm, 2:VS Code, 3:Chrome, 4:Slack, 5:Linear)",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "1",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_control"
                                        ]
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -a 'iTerm'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "2",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_control"
                                        ]
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -a 'Google Chrome'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "3",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_control"
                                        ]
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -a 'Slack'"
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "4",
                                    "modifiers": {
                                        "mandatory": [
                                            "left_control"
                                        ]
                                    }
                                },
                                "to": [
                                    {
                                        "shell_command": "open -a 'Linear'"
                                    }
                                ],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                      "description": "Corne layers: hold F24 = LEFT layer, hold F23 = RIGHT layer",
                      "manipulators": [
                        {
                          "type": "basic",
                          "from": { "key_code": "f24", "modifiers": { "optional": ["any"] } },
                          "to": [
                            { "set_variable": { "name": "layer_left", "value": 1 } },
                            { "set_variable": { "name": "layer_right", "value": 0 } }
                          ],
                          "to_after_key_up": [ { "set_variable": { "name": "layer_left", "value": 0 } } ],
                          "to_if_alone": [ { "key_code": "vk_none" } ]
                        },
                        {
                          "type": "basic",
                          "from": { "key_code": "f23", "modifiers": { "optional": ["any"] } },
                          "to": [
                            { "set_variable": { "name": "layer_right", "value": 1 } },
                            { "set_variable": { "name": "layer_left", "value": 0 } }
                          ],
                          "to_after_key_up": [ { "set_variable": { "name": "layer_right", "value": 0 } } ],
                          "to_if_alone": [ { "key_code": "vk_none" } ]
                        }
                      ]
                    },
                    {
                      "description": "LEFT layer: Q→1 … P→0 and HJKL arrows",
                      "manipulators": [
                        { "type": "basic", "from": { "key_code": "q" }, "to": [ { "key_code": "1" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "w" }, "to": [ { "key_code": "2" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "e" }, "to": [ { "key_code": "3" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "r" }, "to": [ { "key_code": "4" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "t" }, "to": [ { "key_code": "5" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "y" }, "to": [ { "key_code": "6" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "u" }, "to": [ { "key_code": "7" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "i" }, "to": [ { "key_code": "8" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "o" }, "to": [ { "key_code": "9" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "p" }, "to": [ { "key_code": "0" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },

                        { "type": "basic", "from": { "key_code": "h" }, "to": [ { "key_code": "left_arrow" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "j" }, "to": [ { "key_code": "down_arrow" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "k" }, "to": [ { "key_code": "up_arrow" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] },
                        { "type": "basic", "from": { "key_code": "l" }, "to": [ { "key_code": "right_arrow" } ],
                          "conditions": [ { "type": "variable_if", "name": "layer_left", "value": 1 } ] }
                      ]
                    },
                    {
                      "description": "RIGHT layer (Finnish macOS): letters → symbols using Option/Shift combos",
                      "manipulators": [
                        /* Top row: ! @ # $ %  ^ & * ( ) */
                        { "type":"basic","from":{"key_code":"q","modifiers":{"optional":["any"]}},"to":[{"key_code":"1","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ! = Shift+1 */
                        { "type":"basic","from":{"key_code":"w","modifiers":{"optional":["any"]}},"to":[{"key_code":"2","modifiers":["left_option"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* @ = Option+2 */
                        { "type":"basic","from":{"key_code":"e","modifiers":{"optional":["any"]}},"to":[{"key_code":"3","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* # = Shift+3 */
                        { "type":"basic","from":{"key_code":"r","modifiers":{"optional":["any"]}},"to":[{"key_code":"4","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* $ = Shift+4  (if you get € here, change to Option+4) */
                        { "type":"basic","from":{"key_code":"t","modifiers":{"optional":["any"]}},"to":[{"key_code":"5","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* % = Shift+5 */

                        { "type":"basic","from":{"key_code":"y","modifiers":{"optional":["any"]}},"to":[{"key_code":"6","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ^ (fallback) */
                        { "type":"basic","from":{"key_code":"u","modifiers":{"optional":["any"]}},"to":[{"key_code":"6","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* & = Shift+6 */
                        { "type":"basic","from":{"key_code":"i","modifiers":{"optional":["any"]}},"to":[{"key_code":"8","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* * = Shift+8 */
                        { "type":"basic","from":{"key_code":"o","modifiers":{"optional":["any"]}},"to":[{"key_code":"9","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ( = Shift+9 */
                        { "type":"basic","from":{"key_code":"p","modifiers":{"optional":["any"]}},"to":[{"key_code":"0","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ) = Shift+0 */

                        /* Home row punctuation: - = [ ] \  */
                        { "type":"basic","from":{"key_code":"a","modifiers":{"optional":["any"]}},"to":[{"key_code":"hyphen"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* - */
                        { "type":"basic","from":{"key_code":"s","modifiers":{"optional":["any"]}},"to":[{"key_code":"equal_sign"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* = */
                        { "type":"basic","from":{"key_code":"d","modifiers":{"optional":["any"]}},"to":[{"key_code":"8","modifiers":["left_option"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* [ = Option+8 */
                        { "type":"basic","from":{"key_code":"f","modifiers":{"optional":["any"]}},"to":[{"key_code":"9","modifiers":["left_option"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ] = Option+9 */
                        { "type":"basic","from":{"key_code":"g","modifiers":{"optional":["any"]}},"to":[{"key_code":"7","modifiers":["left_option","shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* \ = Option+Shift+7 */

                        { "type":"basic","from":{"key_code":"h","modifiers":{"optional":["any"]}},"to":[{"key_code":"semicolon"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ; */
                        { "type":"basic","from":{"key_code":"j","modifiers":{"optional":["any"]}},"to":[{"key_code":"quote"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* ' */
                        { "type":"basic","from":{"key_code":"k","modifiers":{"optional":["any"]}},"to":[{"key_code":"comma"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* , */
                        { "type":"basic","from":{"key_code":"l","modifiers":{"optional":["any"]}},"to":[{"key_code":"period"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* . */
                        { "type":"basic","from":{"key_code":"semicolon","modifiers":{"optional":["any"]}},"to":[{"key_code":"slash"}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* / */

                        /* Bottom row extras: _ + { } |  */
                        { "type":"basic","from":{"key_code":"z","modifiers":{"optional":["any"]}},"to":[{"key_code":"hyphen","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* _ = Shift+- */
                        { "type":"basic","from":{"key_code":"x","modifiers":{"optional":["any"]}},"to":[{"key_code":"equal_sign","modifiers":["shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* + = Shift+= */
                        { "type":"basic","from":{"key_code":"c","modifiers":{"optional":["any"]}},"to":[{"key_code":"8","modifiers":["left_option","shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* { = Option+Shift+8 */
                        { "type":"basic","from":{"key_code":"v","modifiers":{"optional":["any"]}},"to":[{"key_code":"9","modifiers":["left_option","shift"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] },      /* } = Option+Shift+9 */
                        { "type":"basic","from":{"key_code":"b","modifiers":{"optional":["any"]}},"to":[{"key_code":"7","modifiers":["left_option"]}],
                          "conditions":[{"type":"variable_if","name":"layer_right","value":1}] }       /* | = Option+7 */
                      ]
                    }

                ]
